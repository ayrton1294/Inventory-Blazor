@using Entities
@using Business

@inject NavigationManager NavManager

<div>
    <EditForm Model="@oCategory">
        <DataAnnotationsValidator>
            <div class="form-group">
                <label for="categoryId">Referencia</label>
                <InputText id="categoryId" @bind-Value="oCategory.CategoryId" class="form-control"></InputText>
                <ValidationMessage For="@(() => oCategory.CategoryId)" class="text-danger"></ValidationMessage>
            </div>
            <div class="form-group">
                <label for="categoryId">Nombre de la categoría</label>
                <InputText id="categoryId" @bind-Value="oCategory.CategoryName" class="form-control"></InputText>
                <ValidationMessage For="@(() => oCategory.CategoryName)" class="text-danger"></ValidationMessage>
            </div>
            <div class="form-group">
                <input type="button" value="Agregar Categoría" @onclick="Save" class="form-control btn btn-dark"/>
            </div>
        </DataAnnotationsValidator>
    </EditForm>
</div>

@code {
    CategoryEntity oCategory = new CategoryEntity();

    private void Save()
    {
        B_Category.CreateCategory(oCategory);
        NavManager.NavigateTo("category/list");
    }

    private void HandleValidSubmit()
    {
        Console.WriteLine("OnValidSubmit");
    }
}
